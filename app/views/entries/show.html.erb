<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.strftime("%b %e, %Y") %>
<% end %>
<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal_type %>: 

      </p>
      <div class="panel-block">
        Calories: <%= @entry.calories %>
      </div>
      <div class="panel-block">
        protiens: <%= @entry. carbohydrates%>
      </div>
      <div class="panel-block">
        Carbohydrates: <%= @entry. proteins %>
      </div>
      <div class="panel-block">
        Fats: <%= @entry.fats %>
      </div>
    </nav>
    <div class="column is-mobile">
      <div class="column>"  
        <%= link_to " ", edit_entry_path %>
        <%= link_to 'Edit', edit_entry_path(@entry), class: "button is-gray" %>
        <%= button_to "Delete", @entry, method: :delete , data:{ confirm: "Are you sure?"} , class: "button is-gray" %>
      </div>
      <div class= "column">
        <!-- -->
      </div
    </div>
  </div>
</div>
